<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#D3D3D3"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/NewGameButton"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/newgameicon" />

    <ImageButton
        android:id="@+id/GameHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_below="@+id/NewGameButton"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <ImageButton
        android:id="@+id/EditFormationButton"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/GameHistoryButton"
        app:srcCompat="@android:drawable/alert_dark_frame"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/NewGameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/GameHistoryButton"
        android:layout_centerHorizontal="true"
        android:text="New Game"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/GameHistoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EditFormationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Game History" />

    <TextView
        android:id="@+id/EditFormationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EditFormationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Edit Formation" />
</RelativeLayout>