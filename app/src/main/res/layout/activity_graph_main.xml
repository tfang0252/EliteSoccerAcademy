<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="359dp"
        android:layout_height="249dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp" />

    <Button
        android:id="@+id/return_menu"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Return" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/graph"
        android:layout_marginTop="50dp"
        android:text="Goals"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/graph"
        android:layout_marginTop="120dp"
        android:text="Assists"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/graph"
        android:layout_marginTop="190dp"
        android:text="Clean Sheets"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <View
        android:id="@+id/divider"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:background="@color/colorAccent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:background="@color/colorAccent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:background="@color/colorAccent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/goal_display"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/assist_display"
        android:layout_marginTop="23dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="56sp" />

    <TextView
        android:id="@+id/assist_display"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="90dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="56sp" />

    <TextView
        android:id="@+id/clean_sheet_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/assist_display"
        android:layout_marginTop="162dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="56sp" />

</RelativeLayout>
